<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".MyApp"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.StripeAndroidExampleProject"
        tools:targetApi="31">
        <meta-data
            android:name="com.google.android.gms.wallet.api.enabled"
            android:value="true" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.StripeAndroidExampleProject">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".customerSheet.CustomerSheetActivity"
            android:exported="false"
            android:label="Customer Sheet"
            android:theme="@style/Theme.StripeAndroidExampleProject" />
        <activity
            android:name=".paymentSheet.PaymentSheetActivity"
            android:exported="false"
            android:label="Payment Sheet"
            android:theme="@style/Theme.StripeAndroidExampleProject" />
        <activity
            android:name=".inAppPaymentElement.InAppPaymentElementActivity"
            android:exported="false"
            android:label="In App Payment Element Sheet"
            android:theme="@style/Theme.StripeAndroidExampleProject" />
        <activity
            android:name=".customPaymentMethod.CustomPaymentMethodActivity"
            android:exported="false"
            android:label="In App Payment Element Sheet"
            android:theme="@style/Theme.StripeAndroidExampleProject" />
        <activity
            android:name=".cardWidget.CardWidgetActivity"
            android:exported="false"
            android:label="CardWidget"
            android:theme="@style/Theme.AppCompat.Checkout" />
        <activity
            android:name=".webview.WebViewActivity"
            android:exported="false"
            android:label="Web View"
            android:theme="@style/Theme.StripeAndroidExampleProject" />
        <activity
            android:name=".legacyPaymentSheet.LegacyPaymentSheet"
            android:exported="false"
            android:label="Legacy Payment Sheet"
            android:theme="@style/Theme.AppCompat.Checkout" />
    </application>

</manifest>